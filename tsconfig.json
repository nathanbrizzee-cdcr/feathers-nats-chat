{
  "ts-node": {
    "files": true,
    "swc": true
  },
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./lib",
    "skipLibCheck": true,
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "test",
    "node_modules"
  ]
}